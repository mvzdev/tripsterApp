<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:stretchColumns="*"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/connection_departure_station"
            android:layout_width="0dp"
            android:padding="@dimen/table_padding_small" />

        <TextView
            android:id="@+id/connection_arrival_station"
            android:layout_width="0dp"
            android:gravity="end"
            android:padding="@dimen/table_padding_small" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/connection_departure_time"
            android:padding="@dimen/table_padding_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/connection_arrival_time"
            android:gravity="end"
            android:padding="@dimen/table_padding_small"
            android:textStyle="bold" />
    </TableRow>
</TableLayout>
